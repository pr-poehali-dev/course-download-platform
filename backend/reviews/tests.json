{
  "tests": [
    {
      "name": "Get reviews list",
      "method": "GET",
      "path": "/?action=list&status=all",
      "expectedStatus": 200
    },
    {
      "name": "OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Generate fake reviews (unauthorized)",
      "method": "POST",
      "path": "/?action=generate_fake",
      "headers": {
        "X-Admin-Email": "wrong@email.com"
      },
      "body": {
        "work_ids": [1, 2]
      },
      "expectedStatus": 403
    }
  ]
}