{
  "tests": [
    {
      "name": "Get stats for work",
      "method": "GET",
      "path": "/?work_id=1",
      "expectedStatus": 200,
      "expectedBody": {
        "work_id": 1,
        "views": "number",
        "downloads": "number",
        "reviews": "number"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Increment view count",
      "method": "POST",
      "path": "/",
      "body": {
        "work_id": 1,
        "action": "view"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "work_id": 1
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Increment download count",
      "method": "POST",
      "path": "/",
      "body": {
        "work_id": 1,
        "action": "download"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}
