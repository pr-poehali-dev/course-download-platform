# Главная и каталог - индексировать
/
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=3600

/catalog
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=1800

/work/*
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=3600

/blog
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=3600

/blog/*
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=3600

# Служебные страницы - индексировать с follow для передачи веса
/privacy-policy
  X-Robots-Tag: index, follow
  
/terms-of-service
  X-Robots-Tag: index, follow

/usage-rules
  X-Robots-Tag: index, follow

/offer
  X-Robots-Tag: index, follow

/requisites
  X-Robots-Tag: index, follow

