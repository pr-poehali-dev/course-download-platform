{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "username": "testuser",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "username": "testuser",
          "email": "test@example.com",
          "balance": 100
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login user",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "username": "testuser",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "username": "testuser"
        }
      },
      "bodyMatcher": "partial"
    }
  ]
}
